{# If a layout has `pagination` in its frontmatter, this partial layout can produce previous/next links.  #}
<nav aria-labelledby="pagination">
  <ol>
    {% if pagination.href.next %}
    <li><a href="{{ pagination.href.next }}">{% if pagination.pageNumber == 0 %}Больше ➡{% else %}Следующий ➡{% endif %}</a></li>
    {% else %}{% endif %}
    
    {% if pagination.href.previous %}
    <li><a href="{{ pagination.href.previous }}">⬅ Предыдущий</a></li>
    {% else %}{% endif %}
  </ol>
</nav>
